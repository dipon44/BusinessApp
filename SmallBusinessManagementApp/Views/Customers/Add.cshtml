

@model SmallBusinessManagementApp.Models.Models.Customer
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Customer Create";
}
<h2>Add Customer Info</h2><span>@Html.ActionLink("See All Customers", "Show", "Customers", null, new { @class = "btn btn-info float-right mt-2 btn-lg" })</span>

@if (ViewBag.SMsg != null)
{
    <p style="color: green; font-weight: bolder">@(ViewBag.SMsg)</p>
}

else if (ViewBag.FMsg != null)
{
    <p style="color: red; font-weight: bolder">@(ViewBag.FMsg)</p>
}


@using (Html.BeginForm("Add", "Customers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">Customer Details</div>
            </div>
            <div class="panel-body">
                <div class="form-group row">
                    @Html.Label("Name", "Customer Name *", new { @class = "control-label col-md-4" })
                    @Html.TextBox("Name", null, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(c => c.Name, null, new { @class = "text-danger" })
                </div>


                <div class="form-group row">
                    @Html.Label("Code", "Customer Code *", new { @class = "control-label col-md-4" })
                    @Html.TextBox("Code", null, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(c => c.Code, null, new { @class = "text-danger" })
                    @if (ViewBag.DMsg != null)
                    {
                        <p style="color: red; font-weight: bolder">@(ViewBag.DMsg)</p>
                    }
                </div>

                <div class="form-group row">
                    @Html.Label("Address", "Customer Address *", new { @class = "control-label col-md-4" })
                    @Html.TextBox("Address", null, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(c => c.Address, null, new { @class = "text-danger" })
                </div>


                <div class="form-group row">
                    @Html.Label("Email", "Customer Email *", new { @class = "control-label col-md-4" })
                    @Html.TextBox("Email", null, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(c => c.Email, null, new { @class = "text-danger" })
                </div>

                <div class="form-group row">
                    @Html.Label("Contact", "Customer Contact *", new { @class = "control-label col-md-4" })
                    @Html.TextBox("Contact", null, new { @class = "form-control col-md-4" })
                    @Html.ValidationMessageFor(c => c.Contact, null, new { @class = "text-danger" })
                </div>


                <div class="form-group row">
                    @Html.Label("LoyalityPoint", "Customer LoyalityPoint *", new {@class = "control-label col-md-4"})
                    @Html.TextBox("LoyalityPoint", null, new {@class = "form-control col-md-4"})
                    @Html.ValidationMessageFor(c => c.LoyalityPoint, null, new {@class = "text-danger"})
                </div>

                <input type="file" name="UploadFiles" class="btn btn-primary" /><br />

                <div class="col-md-4 pull-right col-md-offset-4">
                    <input type="submit" class="btn btn-success" value="Save" />
                </div>
            </div>
        </div>


    </div>
}



